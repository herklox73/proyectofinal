  <script>
    window.addEventListener("scroll", function () {
      var navbar = document.querySelector(".navbar");
      if (window.scrollY > 50) {
        navbar.classList.add("navbar-scrolled");
      } else {
        navbar.classList.remove("navbar-scrolled");
      }
      document.querySelectorAll(".fade-in").forEach(function(element) {
        if (element.getBoundingClientRect().top < window.innerHeight * 0.9) {
          element.classList.add("show");
        }
});

    });
  </script>

  <!-- Script para Activar Animación al Hacer Scroll -->
<script>
  document.addEventListener("scroll", function () {
    let elements = document.querySelectorAll(".fade-in");
    let screenHeight = window.innerHeight;

    elements.forEach((element) => {
      let position = element.getBoundingClientRect().top;
      if (position < screenHeight - 100) {
        element.classList.add("show");
      }
    });
  });
</script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    const loginForm = document.getElementById("loginForm");

    loginForm.addEventListener("submit", function (event) {
        event.preventDefault();
        
        let formData = new FormData(loginForm);
        
        fetch("{{ path('app_login') }}", {
            method: "POST",
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                document.getElementById("loginError").innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
            } else {
                window.location.href = data.redirect || "{{ path('homepage') }}"; // Redirigir si es necesario
            }
        })
        .catch(error => console.error("Error en la solicitud:", error));
    });
});
</script>

